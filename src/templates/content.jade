mixin item(name)
    a(href='http://todotable.com', target='_blank')
        li.item
            div
                h3= name
                .type.MINI_WEB_APP
                    | Mini-web app
                    span.fa.fa-external-link(aria-hidden='true')


mixin logoitem(name,url)
    a(href='http://todotable.com', target='_blank')
        li.item
            div
                img(src=url)
                h3= name




