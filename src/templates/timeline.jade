

div.timeline

    mixin project(name)
        li.card.project
            .skeleton
                .line
                    .label-above 2018 - 2016
                .circle
                .more
                    .line
                        .circle
                        .label-above
                            span.meta /^
                            span.text project
                            span.meta $/
                        .label-bellow 
                            span 24/6/2018
            .inner
                .arrow
                h3.name= name
                //h4.subname
                    span.meta /^
                    span.text project
                    span.meta $/

    mixin event(name, content)
        li.card.event
            .skeleton
                .line   
                .circle
                .more
                    .line
                        .circle
            //article.content
                .inner
                    p= content
            .inner
                .arrow
                h3.name= name
                //h4.subname
                    span.meta /^
                    span.text hackathon
                    span.meta $/



    mixin year(year)
        .circle
            .label= year
        .empty


