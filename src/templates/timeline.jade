                h3.name= name
                //h4.subname
                    span.meta /^
                    span.text project
                    span.meta $/

    mixin event(name, featuredImage)
        li.card.event.selectable(
            data-featured-image= featuredImage
        )
            .skeleton
                .line   
                .circle
                .more
                    .line
                        .circle
            //article.content
                .inner
                    p= content
            .inner(style=`background-image:url(/images/events/${featuredImage}.jpg);background-size: cover;background-position: center;`)
                .arrow
                h3.name= name
                //h4.subname
                    span.meta /^
                    span.text hackathon
                    span.meta $/



    mixin year(year)
        .circle
            .label= year
        .empty


