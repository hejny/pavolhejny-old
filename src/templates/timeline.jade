

div.timeline




    mixin item(name,featuredImageInner,featuredImageOuter,innerSkeletonLabel)
        a.item.selectable(data-featured-image= featuredImageOuter, href="/article1")
            li.card

                if innerSkeletonLabel
                    .skeleton-inner-with-label
                        .line
                            .circle
                            .label.label-above 2018 - 2016
                        
                else
                    .skeleton-inner
                        .line
                            .circle

                .skeleton-outer
                    .line
                        .circle
                        .label-above
                            h1.name= name
                            h2.subname
                                span.meta /^
                                span.text project
                                span.meta $/
                        .label.label-bellow 
                            
                            span ahoj
                            //span.time 2018-06-02
                            //ul.participants
                                li Ahoj Ahoj
                                li Ahoj Ahoj
                                li Ahoj Ahoj
                            //p.abstract Vytvořili jsme volební kalkulačku offline. Je to perfektní nástroj na přinesení diskuse o politických tématech na veřejná místa...


                .inner(style=`background-image:url(/images/events/${featuredImageInner}.jpg);background-size: cover;background-position: center;`)
                    .arrow
                    h3.name= name


    mixin year(year,left)
        if left
            .year.left
                .circle
                    .label= year
        else 
            //todo DRY
            .year.right
                .circle
                    .label= year
